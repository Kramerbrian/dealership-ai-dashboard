{
  "id": null,
  "title": "DealershipAI GNN Analytics",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Predictions",
      "targets": [{ "expr": "gnn_predictions_total", "refId": "A" }],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "continuous-BlYlRd" } }
      }
    },
    {
      "type": "stat",
      "title": "Verified Predictions",
      "targets": [{ "expr": "gnn_predictions_verified", "refId": "A" }],
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "thresholds" } }
      }
    },
    {
      "type": "gauge",
      "title": "Precision (Verified / Total)",
      "targets": [
        {
          "expr": "100 * (gnn_predictions_verified / max(1, gnn_predictions_total))",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 70 },
              { "color": "green", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "type": "graph",
      "title": "Training Loss Trend",
      "targets": [
        { "expr": "gnn_training_loss", "legendFormat": "Loss", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "yaxes": [{ "label": "Loss" }, { "show": false }]
    },
    {
      "type": "graph",
      "title": "Prediction Precision Over Time",
      "targets": [
        {
          "expr": "gnn_predictions_verified / gnn_predictions_total",
          "legendFormat": "Precision",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "yaxes": [{ "unit": "percent" }, { "show": false }]
    },
    {
      "type": "graph",
      "title": "Predicted ARR Gain (USD)",
      "targets": [
        {
          "expr": "increase(gnn_arr_gain_usd[1h])",
          "legendFormat": "Î”ARR (hour)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 10, "w": 24, "h": 6 },
      "yaxes": [{ "format": "currencyUSD" }, { "show": false }]
    },
    {
      "type": "table",
      "title": "Top 10 Suggested Fixes",
      "targets": [
        {
          "expr": "topk(10, gnn_fix_confidence{fix!=\"\"})",
          "format": "table",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 6 },
      "styles": [
        { "type": "number", "pattern": "Value", "unit": "percent" },
        { "type": "string", "pattern": "fix", "alias": "Fix Type" },
        { "type": "string", "pattern": "intent", "alias": "Intent" }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "dealer",
        "datasource": "Prometheus",
        "query": "label_values(gnn_fix_confidence, dealer)"
      }
    ]
  }
}
