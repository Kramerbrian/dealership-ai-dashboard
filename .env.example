# === General ===
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=DealershipAI ZeroPoint
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# === Supabase (core DB) ===
SUPABASE_URL=https://your-instance.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# === Redis / Upstash (cache + queue) ===
REDIS_URL=redis://your-upstash-redis-url
REDIS_TOKEN=your-upstash-redis-token

# === BullMQ (job queues) ===
BULLMQ_CONNECTION_URL=${REDIS_URL}
BULLMQ_QUEUE_NAMESPACE=dtri_jobs

# === Analytics & Connectors ===
GSC_API_KEY=your-google-search-console-key
GMB_API_KEY=your-google-business-api-key
OPENAI_API_KEY=your-openai-api-key
PERPLEXITY_API_KEY=your-perplexity-key
STRIPE_API_KEY=your-stripe-key

# === ADA Engine (Python) ===
ADA_ENGINE_URL=http://localhost:8000
ADA_ENGINE_TOKEN=your-ada-engine-token

# === Monitoring & Telemetry ===
LOGTAIL_SOURCE_TOKEN=your-logtail-source-token
SENTRY_DSN=your-sentry-dsn

# === External APIs ===
FLEET_API=https://your-fleet-api.com
API_TOKEN=your-api-token

# === HubSpot Integration ===
HUBSPOT_PORTAL_ID=your-hubspot-portal-id
HUBSPOT_FORM_GUID=your-hubspot-form-guid

# === Key-Value Storage ===
KV_URL=your-kv-write-endpoint
KV_READ_URL=your-kv-read-endpoint

# === Email Automation ===
MAUTOMATE_URL=https://your-automation-host
MAUTOMATE_KEY=your-mautomate-key

# === Webhook URLs ===
SENTINEL_WEBHOOK_URL=your-sentinel-webhook-url

# === Google Analytics ===
NEXT_PUBLIC_GA=G-XXXXXXXXXX

# === Google Analytics Data API ===
GA_PROPERTY_ID=123456789
GA_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"
GA_PROJECT_ID=your-gcp-project-id
# Alternative: Base64 encoded credentials JSON
# GOOGLE_CREDENTIALS_BASE64=your-base64-encoded-json

# === Development Only ===
# Uncomment for local development
# REDIS_URL=redis://localhost:6379
# ADA_ENGINE_URL=http://localhost:8000