# DealershipAI ZeroPoint Master v3.0 - Environment Configuration
# Copy this file to .env.local and update with your actual values

# Redis Configuration (Upstash)
REDIS_URL=redis://<upstash-url>

# Supabase Configuration
SUPABASE_URL=https://<supabase-instance>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<service-role-key>

# OpenAI Configuration
OPENAI_API_KEY=<openai-key>

# ADA Engine Configuration (Fly.io deployment)
ADA_ENGINE_URL=https://dealershipai-dtri-ada.fly.dev/analyze

# Base URL for API calls
BASE_URL=https://dashboard.dealershipai.com

# NCM Benchmark API
NCM_BENCHMARK_URL=https://api.ncm20group.com/benchmarks/latest

# DTRI Job Configuration
DTRI_CONCURRENCY=3
DTRI_RETRY_ATTEMPTS=2
DTRI_BACKOFF_DELAY=10000

# Nightly Job Schedule (Cron format)
DTRI_NIGHTLY_CRON=0 3 * * *
DTRI_WEEKLY_CRON=0 2 * * 0

# Deployment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://dashboard.dealershipai.com
