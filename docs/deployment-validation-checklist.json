  "rollbackProcedure": {
    "triggers": [
      "Manifest validation fails",
      "Production HTTP 500 errors",
      "Lighthouse score drops below 85",
      "Error rate > 1% in first hour"
    ],
    "steps": [
      {
        "step": 1,
        "action": "Identify failing commit",
        "command": "git log --oneline -n 5"
      },
      {
        "step": 2,
        "action": "Revert to last known good state",
        "command": "git revert HEAD && git push origin main"
      },
      {
        "step": 3,
        "action": "Notify team in Slack",
        "command": "Post to #incidents channel"
      },
      {
        "step": 4,
        "action": "Verify rollback succeeded",
        "command": "curl -I https://dealershipai.com"
      },
      {
        "step": 5,
        "action": "Create incident report",
        "command": "Document in /docs/incidents/"
      }
    ]
  }
