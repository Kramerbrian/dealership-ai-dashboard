{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/contexts/*": [
        "../../contexts/*"
      ],
      "@/exports/*": [
        "../../exports/*"
      ],
      "@/docs/*": [
        "../../docs/*"
      ]
    },
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "configs",
    "lib",
    "styles",
    "components",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
