      {
        "risk": "API rate limiting (OpenAI)",
        "mitigation": "Response caching + request batching",
        "owner": "AI Team"
      },
      {
        "risk": "Vercel build timeouts",
        "mitigation": "Optimize build pipeline + incremental builds",
        "owner": "DevOps Team"
      }
    ],
