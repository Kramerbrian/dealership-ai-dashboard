# Production Environment Variables Template
# Copy this file to .env.production and fill in all values

# ============================================
# Application
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://dealershipai.com
NEXT_PUBLIC_DASHBOARD_URL=https://dealershipai.com/dash
NEXT_PUBLIC_MARKETING_URL=https://dealershipai.com

# ============================================
# Database (Supabase PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
DIRECT_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# Authentication (Clerk)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx
NEXTAUTH_URL=https://dealershipai.com
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars

# ============================================
# Redis/Upstash (Caching & Queues)
# ============================================
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token-here
REDIS_URL=rediss://default:token@host:port

# ============================================
# AI APIs
# ============================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxx
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxx
GOOGLE_AI_API_KEY=your-google-ai-key

# ============================================
# Google Services
# ============================================
NEXT_PUBLIC_GA_ID=G-JYQ9MZLCQW
GOOGLE_ANALYTICS_PROPERTY_ID=G-JYQ9MZLCQW
GOOGLE_ANALYTICS_API_KEY=your-ga4-api-key
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# ============================================
# Payments (Stripe)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# ============================================
# Monitoring & Logging
# ============================================
SENTRY_DSN=https://xxxxxxxx@xxxxxxxx.ingest.sentry.io/xxxxxxxx
SENTRY_AUTH_TOKEN=your-sentry-auth-token
LOGTAIL_TOKEN=your-logtail-token

# ============================================
# Prometheus & Alerting
# ============================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=https://grafana.yourdomain.com

# ============================================
# Slack Integration
# ============================================
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-bot-token

# ============================================
# Background Jobs & Cron
# ============================================
CRON_SECRET=your-secure-random-secret-here
BULLMQ_REDIS_URL=redis://default:token@host:port

# ============================================
# Product Analytics
# ============================================
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Email (Resend)
# ============================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@dealershipai.com

# ============================================
# Feature Flags (Optional)
# ============================================
NEXT_PUBLIC_FEATURE_FLAGS_ENABLED=true
FEATURE_FLAGS_API_KEY=your-feature-flags-key

# ============================================
# Security
# ============================================
ENCRYPTION_KEY=your-32-char-encryption-key-here
SESSION_SECRET=your-session-secret-here

